<UserControl x:Class="OrderingGifts_Шашин.Order_Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderingGifts_Шашин"
             mc:Ignorable="d">

    <Border x:Name="border" CornerRadius="10" Margin="20,10" BorderThickness="1" BorderBrush="#e04e4e" Background="White">
        <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock x:Name="fio_itm" Text="Николаев Николай Николаевич" FontFamily="Segoe UI" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="mess_itm" Text="Очень тебя люблю!!!" FontFamily="Segoe UI" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock x:Name="adress_itm" Text="Пушкина 37" FontFamily="Segoe UI" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock x:Name="date_itm" Text="22.11.2025 11:00" FontFamily="Segoe UI" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock x:Name="email_itm" Text="podarok.gift@gmail.com" FontFamily="Segoe UI" FontSize="14"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="10,0,0,0">
                <Button Click="EditOrder" Width="100" Height="40" Background="#7ce04e" BorderThickness="0" Margin="0,0,0,10">
                    <Image Source="/Images/redac.png" Width="20"/>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Click="RemoveOrder" Width="100" Height="40" Background="#e04e4e" BorderThickness="0">
                    <Image Source="/Images/del.png" Width="20"/>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>