<Page x:Class="OrderingGifts_Шашин.Pages.OrderAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderingGifts_Шашин.Pages"
      mc:Ignorable="d"
      Title="OrderAdd" d:Width="800" d:Height="450">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="#e04e4e" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="addLabel" Grid.Column="1" Grid.ColumnSpan="2" Content="Добавление заказа" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold"/>

            <Button Click="Gregory" Grid.Column="3" Width="40" Height="40" Background="#2c2e2b" BorderBrush="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <Image Source="/Images/Gregory.png" Stretch="UniformToFill" Width="40" Height="40">
                                <Image.Clip>
                                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Grid Background="White" Grid.Row="1">
            <ScrollViewer>
                <StackPanel Margin="20">
                    <Label Content="Введите ФИО" Foreground="Black" FontFamily="Segoe UI" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="fioTB" Height="35" FontFamily="Segoe UI" Margin="0,0,0,15" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Label Content="Введите сообщение" Foreground="Black" FontFamily="Segoe UI" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="textTB" Height="35" FontFamily="Segoe UI" Margin="0,0,0,15" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Label Content="Введите адрес" Foreground="Black" FontFamily="Segoe UI" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="adressTB" Height="35" FontFamily="Segoe UI" Margin="0,0,0,15" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Label Content="Введите дату и время (дд.мм.гггг чч:мм)" Foreground="Black" FontFamily="Segoe UI" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="dateTB" Height="35" FontFamily="Segoe UI" Margin="0,0,0,15" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Label Content="Введите адрес электронной почты" Foreground="Black" FontFamily="Segoe UI" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="emailTB" Height="35" FontFamily="Segoe UI" Margin="0,0,0,20" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Click="AddOrder" Grid.Column="0" Height="35" Background="#7ce04e">
                            <TextBlock x:Name="addTB" Text="Добавить заказ" FontFamily="Segoe UI" FontSize="14"/>
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Click="ClickBack" Grid.Column="2" Height="35" Background="#e04e4e">
                            <TextBlock Text="Отмена" FontFamily="Segoe UI" FontSize="14"/>
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>