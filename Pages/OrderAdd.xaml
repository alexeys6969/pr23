<Page x:Class="OrderingGifts_Шашин.Pages.OrderAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderingGifts_Шашин.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="OrderAdd" Height="469">
    <Grid>
        <Grid Background="#e04e4e" Width="800" Height="70" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Images/gift.png" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <Label x:Name="addLabel" Grid.Column="1" Grid.ColumnSpan="2" Content="Добавление заказа" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Copperplate Gothic Bold" FontSize="28"/>

            <Button Click="Gregory" Grid.Column="3" Width="40" Height="40" Background="#2c2e2b" BorderBrush="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <Image Source="/Images/Gregory.png" Stretch="UniformToFill" Width="40" Height="40">
                                <Image.Clip>
                                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Grid Background="White" Margin="0,70,0,0">
            <Label Content="Введите ФИО" Height="30" Foreground="Black" FontFamily="Copperplate Gothic Light" FontSize="16" Margin="35,20,623,330" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="fioTB" Margin="35,50,35,0" VerticalAlignment="Top" Height="20" FontFamily="Copperplate Gothic Light">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Label Content="Введите сообщение" Height="28" Foreground="Black" FontFamily="Copperplate Gothic Light" FontSize="16" Margin="35,75,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="textTB" Margin="35,105,35,0" Height="20" VerticalAlignment="Top" FontFamily="Copperplate Gothic Light">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Label Content="Введите адрес" Height="28" Foreground="Black" FontFamily="Copperplate Gothic Light" FontSize="16" Margin="35,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="adressTB" Margin="35,160,35,0" Height="20" VerticalAlignment="Top" FontFamily="Copperplate Gothic Light">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Label Content="Введите дату и время (дд.мм.гггг чч:мм)" Height="28" Foreground="Black" FontFamily="Copperplate Gothic Light" FontSize="16" Margin="35,185,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="dateTB" Margin="35,215,35,0" Height="20" VerticalAlignment="Top" FontFamily="Copperplate Gothic Light">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Label Content="Введите адрес электронной почты" Height="28" Foreground="Black" FontFamily="Copperplate Gothic Light" FontSize="16" Margin="35,240,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="emailTB" Margin="35,270,35,0" Height="20" VerticalAlignment="Top" FontFamily="Copperplate Gothic Light">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Click="AddOrder" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="35,0,35,40" Width="358" Height="25" Background="#7ce04e">
                <TextBlock x:Name="addTB" Text="Добавить/Изменить заказ" FontFamily="Copperplate Gothic Light"/>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Click="ClickBack" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="35,0,35,40" Width="358" Height="25" Background="#e04e4e">
                <TextBlock Text="Отмена" FontFamily="Copperplate Gothic Light"/>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page>
