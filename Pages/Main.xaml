<Page x:Class="OrderingGifts_Шашин.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderingGifts_Шашин.Pages"
      mc:Ignorable="d" 
      Title="Main" d:Width="800" d:Height="450">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="#e04e4e" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Click="Add_Click" Grid.Column="1" Width="113" Height="40" Background="#2c2e2b" BorderBrush="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <Image Source="/Images/plus.png" Width="20"/>
            </Button>

            <TextBox Grid.Column="2" Height="40" Margin="20,0,100,0" FontFamily="Segoe UI" FontSize="14" HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Click="Gregory" Grid.Column="3" Width="40" Height="40" Background="#2c2e2b" BorderBrush="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <Image Source="/Images/Gregory.png" Stretch="UniformToFill" Width="40" Height="40">
                                <Image.Clip>
                                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Grid Grid.Row="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Click="filter_click" Grid.Row="0" Margin="25,10,0,10" VerticalAlignment="Center" Background="Transparent" Height="25" HorizontalAlignment="Left" BorderThickness="0">
                <TextBlock Text="Сортировка" TextDecorations="Underline" FontFamily="Segoe UI" FontSize="14"/>
            </Button>

            <ScrollViewer x:Name="scroll_main" Grid.Row="1">
                <StackPanel x:Name="parrent"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>