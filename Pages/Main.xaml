<Page x:Class="OrderingGifts_Шашин.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderingGifts_Шашин.Pages"
      mc:Ignorable="d" 
      Title="Main">

    <Grid>
        <Grid Background="#e04e4e" Width="800" Height="70" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Images/gift.png" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <Button Click="Add_Click" Grid.Column="1" Width="113" Height="40" Background="#2c2e2b" BorderBrush="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <Image Source="/Images/plus.png" Width="20"/>
            </Button>

            <TextBox TextChanged="search" Grid.Column="2" Height="40" Grid.ColumnSpan="2" Margin="0,15,102,15">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Click="Gregory" Grid.Column="3" Width="40" Height="40" Background="#2c2e2b" BorderBrush="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <Image Source="/Images/Gregory.png" Stretch="UniformToFill" Width="40" Height="40">
                                <Image.Clip>
                                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        <Grid Margin="0,70,0,0" Background="White" Height="380" VerticalAlignment="Bottom">
            <Button Click="filter_click" Margin="25,0,0,0" VerticalAlignment="Top" Background="Transparent" Height="25" HorizontalAlignment="Left" BorderThickness="0">
                <TextBlock Text="Фильтры" TextDecorations="Underline" FontFamily="Copperplate Gothic Light"/>
            </Button>
            <ScrollViewer x:Name="scroll_main" Margin="0,25,0,0">
                <StackPanel x:Name="parrent">
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
