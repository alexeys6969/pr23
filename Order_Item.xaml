                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Margin="0,113,40,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" Height="45" Background="#e04e4e" BorderThickness="0">
