            <Label Content="Пушкина 37" x:Name="adress_itm" FontFamily="Copperplate Gothic Light" FontSize="20" Margin="20,85,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="22.11.2025 11:00" x:Name="date_itm" FontFamily="Copperplate Gothic Light" FontSize="20" Margin="20,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
