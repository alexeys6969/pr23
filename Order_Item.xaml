             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderingGifts_Шашин"
             mc:Ignorable="d">
    <Border CornerRadius="10,10,10,10" Margin="35,20,25,20" BorderThickness="1" BorderBrush="#e04e4e" Height="200" Width="730" Background="White">
        <Grid>
            <Label Content="Николаев Николай Николаевич" x:Name="fio_itm" FontFamily="Copperplate Gothic Bold" FontSize="24" Margin="20,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
